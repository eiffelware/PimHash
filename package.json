{
  "name": "pimhash",
  "productName": "PimHash",
  "version": "0.1.0",
  "description": "Encrypt your text using PimHash!",
  "main": "src/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "echo \"No linting configured\"",
    "build": "npm run pack:win64",
    "pack:win64": "electron-packager . PimHash --out=dist/win --platform=win32 --arch=x64 app-version=0.1 --icon=./src/views/public/favicon.ico --overwrite"
  },
  "keywords": [],
  "author": {
    "name": "Eiffelware Project",
    "email": "46428773+Peregrinn@users.noreply.github.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "pimhash"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "ejs": "^3.1.6",
    "ejs-electron": "^2.1.1",
    "electron-squirrel-startup": "^1.0.0",
    "fs": "0.0.1-security",
    "jquery": "^3.6.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "electron": "12.0.7"
  }
}
